<div class="col-sm-4 p-2">

	<div class="card" style="width:300px">
		<div class="d-flex justify-content-center p-2">
			<img src="@ImageUrl" style="width: 100%;" height="250" alt="Alternate Text" />
		</div>
		<div class="card-body">
			<h5 class="card-title"><a href="/product/@Id">@Name</a></h5>
			<p class="card-text">@Description.Substring(0, 50)...</p>
			<p class="text-secondary text-center h2 font-weight-bold">
				@Price.ToString("C")
			</p>
			<a href="#" class="btn btn-danger w-100"> <i class="fas fa-shopping">Add To Card</i> </a>
		</div>
	</div>
</div>

@code {
	[Parameter]
	public int Id { get; set; }
	[Parameter]
	public string ImageUrl { get; set; }
	[Parameter]
	public string Name { get; set; }
	[Parameter]
	public string Description { get; set; }
	[Parameter]
	public decimal Price { get; set; }
}
